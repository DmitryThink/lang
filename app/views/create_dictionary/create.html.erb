<%= form_for @translation, url: { id: 'id' } do |f| %>
  <%= f.hidden_field :language_from_id %>
  <%= f.hidden_field :language_to_id %>
  <div class="form-group">
    <%= f.fields_for :word_from do |ff| %>
      <%= ff.label 'word_from' %>
      <%= ff.text_field :name, class:"form-control input-sm" %>
    <% end %>
    <%= f.fields_for :word_to do |ff| %>
      <%= ff.label 'word_to' %>
      <%= ff.text_field :name, class:"form-control input-sm" %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.submit "Add", class: "btn btn-primary" %>
  </div>
<% end %>