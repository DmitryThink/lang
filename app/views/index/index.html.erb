<div id="container">
  <h1>&bull; Lang &bull;</h1>
  <div class="underline">
  </div>
  <h2>Choose languages</h2>
  <%= form_for @queue_list, url: {action: "create"}, id: "contact_form" do |f| %>
    <div class="subject">
      <label for="subject"></label>
        <%= f.collection_select :language_from_id, Language.all, :id, :name, {}, {class: "form-control input-lg"}  %>
    </div>
    <div class="subject">
      <label for="subject"></label>
        <%= f.collection_select :language_to_id, Language.all.reverse_order, :id, :name, {}, {class: "form-control input-lg"}  %>

    </div>
    <div class="submit">
      <%= f.submit "Choose", class: "btn btn-primary", id:"form_button" %>
    </div>
  <% end %><!-- // End form -->
</div><!-- // End #container -->